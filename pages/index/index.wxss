/**index.wxss**/
@import "../common.wxss";
.search{
    padding:8px 0;
    background:#fff;
}
.search input{
    flex:1;
    margin:0 10px;
    padding-left:20px;
    background:#ccc url('../images/tabbar/bell_active.png') no-repeat left center;
    font-size:14px;
}
.hot-btn{
    padding:8px 0;
    border-top:1px solid #ccc;
    border-bottom:1px solid #ccc;
    background:#fff;
    text-align:center;
}
.hot-btn-item{
    flex:1;
    font-size:16px;
}
.artical-list{
    margin:10px auto;
}
.artical-item{
    margin-bottom:10px;
    padding:10px;
    background:#fff;
    font-size:14px;
}
.artical-item .avator-image{
    width:20px;
    height:20px;
    border-radius:10px;
    vertical-align:middle;
}
.artical-item .artical-image{
    text-align:center;
}
.artical-item .artical-image image{
    width:100%;
}
